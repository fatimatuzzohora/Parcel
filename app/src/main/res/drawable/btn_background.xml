<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="@color/colorDarkPink" />
            <stroke
                android:width="0dp"
                android:color="#222222" />
            <corners
                android:radius="5dp" />
            <padding
                android:bottom="10dp"
                android:left="10dp"
                android:right="10dp"
                android:top="10dp" />
        </shape>
    </item>

    <item>
        <shape>
            <gradient
                android:angle="270"
                android:endColor="@color/colorLightPink"
                android:startColor="@color/colorLightPink" />
            <stroke
                android:width="0dp"
                android:color="#4aa5d4" />
            <corners
                android:radius="5dp" />
            <padding
                android:bottom="10dp"
                android:left="10dp"
                android:right="10dp"
                android:top="10dp" />
        </shape>
    </item>
</selector>