<?xml version="1.0" encoding="utf-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape
            android:shape="rectangle">
            <!-- Set the border color of your layout here -->
            <stroke
                android:width="4dp"
                android:color="@color/colorGreen" />
            <solid
                android:color="@color/colorGreen" />
        </shape>
    </item>

    <!-- This is for border bottom but
   you can change this according to your need -->
    <item android:left="15dp" >
        <shape
            android:shape="rectangle">
            <!-- Set the background color of your layout here -->
            <stroke
                android:width="1dp"
                android:color="@color/colorWhite" />

            <solid
                android:color="@color/colorWhite" />
        </shape>
    </item>

</layer-list>