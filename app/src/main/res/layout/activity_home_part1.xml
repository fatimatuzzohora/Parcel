<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!--1st Row-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/global_8dp"
        android:orientation="horizontal"
        android:weightSum="2">

       <!-- 1st box : Pick Up-->
        <android.support.v7.widget.CardView
            android:layout_width="@dimen/global_0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:orientation="vertical"
               android:layout_gravity="center"
               android:background="@drawable/ash_border_background">

               <!--Pick up image, total and number-->
               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   android:weightSum="10">

    `              <!-- Pick up Image-->
                   <ImageView
                       android:layout_width="100dp"
                       android:layout_height="80dp"
                       android:src="@drawable/pickup"
                       android:layout_weight="1" />

                   <View
                       android:layout_width="@dimen/global_2dp"
                       android:layout_height="match_parent"
                       android:background="@color/colorAsh"/>

                  <!-- Pick up total and number-->
                   <LinearLayout
                       android:layout_width="wrap_content"
                       android:layout_height="match_parent"
                       android:layout_weight="9"
                       android:orientation="vertical">

                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="@dimen/global_0dp"
                           android:layout_weight="1"
                           android:paddingLeft="@dimen/global_16dp"
                           android:paddingRight="@dimen/global_16dp"
                           android:gravity="center"
                           android:text="@string/total"
                           style="@style/NormalTextView"/>

                       <View
                           android:layout_width="match_parent"
                           android:layout_height="@dimen/global_2dp"
                           android:background="@color/colorAsh"/>

                    <!--Pick up Total-->
                       <TextView
                           android:id="@+id/totalPickup"
                           android:layout_width="match_parent"
                           android:layout_height="@dimen/global_0dp"
                           android:layout_weight="1"
                           android:paddingLeft="@dimen/global_16dp"
                           android:paddingRight="@dimen/global_16dp"
                           android:gravity="center"
                           android:background="@drawable/bg_orange_shade_left_right"
                           android:textColor="@color/colorWhite"
                           android:textStyle="bold"
                           style="@style/NormalTextView"/>

                   </LinearLayout>

               </LinearLayout>

               <View
                   android:layout_width="match_parent"
                   android:layout_height="@dimen/global_2dp"
                   android:background="@color/colorAsh"/>

               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:text="@string/pick_up"
                   android:padding="@dimen/global_4dp"
                   android:gravity="center"
                   style="@style/NormalTextView"/>

           </LinearLayout>

        </android.support.v7.widget.CardView>
        <!--End of 1st box-->

       <!-- Start of 2nd box-->
        <android.support.v7.widget.CardView
            android:layout_width="@dimen/global_0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:background="@drawable/ash_border_background">

                <!--for Delivery image, total and number-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!--Delivery Image-->
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="80dp"
                        android:src="@drawable/delivery"/>

                    <View
                        android:layout_width="@dimen/global_2dp"
                        android:layout_height="match_parent"
                        android:background="@color/colorAsh"/>

                    <!-- Delivery total and number-->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/global_0dp"
                            android:layout_weight="1"
                            android:paddingLeft="@dimen/global_16dp"
                            android:paddingRight="@dimen/global_16dp"
                            android:gravity="center"
                            android:text="@string/total"
                            style="@style/NormalTextView"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/global_2dp"
                            android:background="@color/colorAsh"/>

                        <!--Delivery Total-->
                        <TextView
                            android:id="@+id/totalDelivery"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/global_0dp"
                            android:layout_weight="1"
                            android:paddingLeft="@dimen/global_16dp"
                            android:paddingRight="@dimen/global_16dp"
                            android:gravity="center"
                            android:background="@drawable/bg_orange_shade_left_right"
                            android:textStyle="bold"
                            android:textColor="@color/colorWhite"
                            style="@style/NormalTextView"/>

                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/global_2dp"
                    android:background="@color/colorAsh"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/delivery"
                    android:padding="@dimen/global_4dp"
                    android:gravity="center"
                    style="@style/NormalTextView"/>

            </LinearLayout>


        </android.support.v7.widget.CardView>
          <!--  End of 2nd box-->



    </LinearLayout>
    <!--End of 1st Row-->

    <!--Start of 2nd Row-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/global_8dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <!-- 3rd box : On Process-->
        <android.support.v7.widget.CardView
            android:layout_width="@dimen/global_0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:background="@drawable/ash_border_background">

                <!--On Process image, total and number-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="10">


                    <!-- On Process Image-->
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="80dp"
                        android:src="@drawable/on_going_deliver"
                        android:layout_weight="1" />

                    <View
                        android:layout_width="@dimen/global_2dp"
                        android:layout_height="match_parent"
                        android:background="@color/colorAsh"/>

                    <!-- On Process total and number-->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="9"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/global_0dp"
                            android:layout_weight="1"
                            android:paddingLeft="@dimen/global_16dp"
                            android:paddingRight="@dimen/global_16dp"
                            android:gravity="center"
                            android:text="@string/total"
                            style="@style/NormalTextView"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/global_2dp"
                            android:background="@color/colorAsh"/>

                        <!--On process Total-->
                        <TextView
                            android:id="@+id/totalOnProcess"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/global_0dp"
                            android:layout_weight="1"
                            android:paddingLeft="@dimen/global_16dp"
                            android:paddingRight="@dimen/global_16dp"
                            android:gravity="center"
                            android:background="@drawable/bg_orange_shade_left_right"
                            android:textColor="@color/colorWhite"
                            style="@style/NormalTextView"/>

                    </LinearLayout>


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/global_2dp"
                    android:background="@color/colorAsh"/>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/on_process"
                    android:padding="@dimen/global_4dp"
                    android:gravity="center"
                    style="@style/NormalTextView"/>

            </LinearLayout>


        </android.support.v7.widget.CardView>
       <!-- End of 3rd Box-->

        <!-- 4th box : Cancel-->
        <android.support.v7.widget.CardView
            android:layout_width="@dimen/global_0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:background="@drawable/ash_border_background">

                <!--for Cancel image, total and number-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!--Cancel Image-->
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="80dp"
                        android:src="@drawable/cancel" />

                    <View
                        android:layout_width="@dimen/global_2dp"
                        android:layout_height="match_parent"
                        android:background="@color/colorAsh"/>

                    <!-- Cancelled total and number-->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/global_0dp"
                            android:layout_weight="1"
                            android:paddingLeft="@dimen/global_16dp"
                            android:paddingRight="@dimen/global_16dp"
                            android:gravity="center"
                            android:text="@string/total"
                            style="@style/NormalTextView"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/global_2dp"
                            android:background="@color/colorAsh"/>

                        <!--Cancel Total-->
                        <TextView
                            android:id="@+id/totalCancel"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/global_0dp"
                            android:layout_weight="1"
                            android:paddingLeft="@dimen/global_16dp"
                            android:paddingRight="@dimen/global_16dp"
                            android:gravity="center"
                            android:background="@drawable/bg_orange_shade_left_right"
                            android:textColor="@color/colorWhite"
                            style="@style/NormalTextView"/>


                    </LinearLayout>


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/global_2dp"
                    android:background="@color/colorAsh"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/parcel_return"
                    android:padding="@dimen/global_4dp"
                    android:gravity="center"
                    style="@style/NormalTextView"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>

</LinearLayout>