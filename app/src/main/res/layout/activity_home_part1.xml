<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/global_8dp"
        app:cardCornerRadius="@dimen/global_8dp"
        app:cardMaxElevation="@dimen/global_8dp">

         <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/global_8dp"
        android:orientation="horizontal">

        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/global_16dp"
            android:layout_gravity="center"
            android:layout_weight="1">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_orange_shade_left_right">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/global_16dp"
                    android:gravity="center"
                    android:text="@string/pick_up"
                    android:fontFamily="sans-serif-light"
                    android:textColor="@color/colorWhite"
                    android:textStyle="bold"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>

            </RelativeLayout>


        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/global_16dp"
            android:layout_gravity="center"
            android:layout_weight="1">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_green_shade_left_right">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/global_16dp"
                    android:gravity="center"
                    android:text="@string/delivery"
                    android:textColor="@color/colorWhite"
                    android:fontFamily="sans-serif-light"
                    android:textStyle="bold"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>

            </RelativeLayout>


        </android.support.v7.widget.CardView>


    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="@dimen/global_8dp">

            <android.support.v7.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/global_16dp"
                android:layout_gravity="center"
                android:layout_weight="1">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_purple_shade_left_right">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/global_16dp"
                        android:gravity="center"
                        android:text="@string/on_process"
                        android:textColor="@color/colorWhite"
                        android:fontFamily="sans-serif-light"
                        android:textStyle="bold"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>

                </RelativeLayout>


        </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/global_16dp"
                android:layout_gravity="center"
                android:layout_weight="1">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_red_shade_left_right">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/global_16dp"
                        android:gravity="center"
                        android:textColor="@color/colorWhite"
                        android:fontFamily="sans-serif-light"
                        android:text="@string/cancel"
                        android:textStyle="bold"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>

                        </RelativeLayout>


                </android.support.v7.widget.CardView>

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>



    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/global_8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            
       

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/picture_height_100"
            android:layout_weight="1"
            android:layout_margin="@dimen/global_16dp"
            android:background="@drawable/bg_blue_shade_left_right">

            <ImageView
                android:layout_width="@dimen/logo_width_50"
                android:layout_height="@dimen/logo_height_50"
                android:src="@drawable/pickup"
                android:contentDescription="@string/pick_up"
                android:layout_alignParentBottom="true" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total"
                android:fontFamily="sans-serif"
                android:layout_alignParentEnd="true"
                android:layout_margin="@dimen/global_8dp" />
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="32"
                android:layout_centerInParent="true"
                android:textStyle="italic"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"/>



        </RelativeLayout>



            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/picture_height_100"
                android:layout_weight="1"
                android:layout_margin="@dimen/global_16dp"
                android:background="@drawable/bg_blue_shade_left_right">

                <ImageView
                    android:layout_width="@dimen/logo_width_50"
                    android:layout_height="@dimen/logo_height_50"
                    android:src="@drawable/delivery"
                    android:contentDescription="@string/pick_up"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total"
                    android:fontFamily="sans-serif"
                    android:layout_margin="@dimen/global_8dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="32"
                    android:layout_centerInParent="true"
                    android:textStyle="bold"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"/>



            </RelativeLayout>


        </LinearLayout>


    </android.support.v7.widget.CardView>



    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/global_8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">



            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/picture_height_100"
                android:layout_weight="1"
                android:layout_margin="@dimen/global_16dp"
                android:background="@drawable/bg_blue_shade_left_right">

                <ImageView
                    android:layout_width="@dimen/logo_width_50"
                    android:layout_height="@dimen/logo_height_50"
                    android:src="@drawable/on_going_deliver"
                    android:contentDescription="@string/pick_up"
                    android:layout_alignParentBottom="true" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total"
                    android:fontFamily="sans-serif"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="@dimen/global_8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="32"
                    android:layout_centerInParent="true"
                    android:textStyle="italic"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"/>



            </RelativeLayout>



            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/picture_height_100"
                android:layout_weight="1"
                android:layout_margin="@dimen/global_16dp"
                android:background="@drawable/bg_blue_shade_left_right">

                <ImageView
                    android:layout_width="@dimen/logo_width_50"
                    android:layout_height="@dimen/logo_height_50"
                    android:src="@drawable/delivery"
                    android:contentDescription="@string/pick_up"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total"
                    android:fontFamily="sans-serif"
                    android:layout_margin="@dimen/global_8dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="32"
                    android:layout_centerInParent="true"
                    android:textStyle="bold"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"/>



            </RelativeLayout>


        </LinearLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>