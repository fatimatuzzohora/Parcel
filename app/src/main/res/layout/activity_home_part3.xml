<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/global_8dp"
        app:cardCornerRadius="@dimen/global_8dp"
        app:cardMaxElevation="@dimen/global_8dp">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/global_8dp"
        android:orientation="horizontal">

        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/global_16dp"
            android:layout_gravity="center"
            android:layout_weight="1">

            <RelativeLayout
                android:id="@+id/merchant_profile"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/layout_border_pink">

                <ImageView
                    android:id="@+id/pro_img"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_profile"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/global_16dp"
                    android:layout_marginEnd="@dimen/global_8dp"
                    android:layout_marginBottom="@dimen/global_8dp"
                    android:gravity="center"
                    android:text="@string/merchant_profile"
                    android:layout_below="@+id/pro_img"
                    android:fontFamily="sans-serif-light"
                    android:textColor="@color/colorPink"
                    android:textStyle="bold"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>

            </RelativeLayout>


        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/global_16dp"
            android:layout_gravity="center"
            android:layout_weight="1">

            <RelativeLayout
                android:id="@+id/merchant_request"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/layout_border_pink">

                <ImageView
                    android:id="@+id/req_img"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_requisition" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/req_img"
                    android:layout_marginStart="@dimen/global_16dp"
                    android:layout_marginEnd="@dimen/global_8dp"
                    android:layout_marginBottom="@dimen/global_8dp"
                    android:gravity="center"
                    android:text="@string/merchant_request"
                    android:textColor="@color/colorPink"
                    android:fontFamily="sans-serif-light"
                    android:textStyle="bold"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>

            </RelativeLayout>


        </android.support.v7.widget.CardView>


    </LinearLayout>




