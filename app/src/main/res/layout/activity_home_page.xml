<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Activity.HomeActivity"
    tools:showIn="@layout/activity_home_full">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       android:background="@color/colorWhite">
      
      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="@string/monthly_report"
          android:textColor="@color/colorBlack"
          android:gravity="center"
          android:textSize="18sp"
          android:background="@drawable/ash_border_background"
          android:layout_marginTop="@dimen/global_16dp"
          android:padding="@dimen/global_4dp"
          />


      <include
          layout="@layout/activity_home_part1"
          android:layout_height="wrap_content"
          android:layout_width="match_parent"
          android:layout_marginBottom="30dp"/>

     <!-- 2nd Part-->
      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="@string/menu_content"
          android:textColor="@color/colorBlack"
          android:textSize="18sp"
          android:background="@drawable/ash_border_background"
          android:layout_marginBottom="@dimen/global_16dp"
          android:padding="@dimen/global_4dp"
          android:gravity="center" />

      <include
          layout="@layout/activity_home_part2"
          android:layout_height="wrap_content"
          android:layout_width="match_parent"
          android:layout_marginBottom="30dp"/>


      <!-- 3rd Part-->
       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="@string/communication"
           android:textColor="@color/colorBlack"
           android:textSize="18sp"
           android:background="@drawable/ash_border_background"
           android:layout_marginBottom="@dimen/global_16dp"
           android:padding="@dimen/global_4dp"
           android:gravity="center" />

      <include
          layout="@layout/activity_home_part3"
          android:layout_height="wrap_content"
          android:layout_width="match_parent"
          android:layout_marginBottom="30dp"/>



      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/copyright"
          android:padding="@dimen/global_4dp"
          android:layout_gravity="right"/>

   </LinearLayout>

</ScrollView>