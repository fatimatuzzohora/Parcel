<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Activity.HomeActivity"
    tools:showIn="@layout/activity_home_full">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical">
      
      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="@string/monthly_report"
          android:textColor="@color/colorBlack"
          android:layout_marginStart="@dimen/global_16dp"
          android:padding="@dimen/global_4dp"
          android:textAppearance="@style/TextAppearance.AppCompat.Small"/>

      <View
          android:layout_width="match_parent"
          android:layout_height="@dimen/global_2dp"
          android:background="@color/colorAsh"
          android:layout_marginStart="@dimen/global_16dp"
          android:layout_marginEnd="@dimen/global_16dp"/>


      <include
          layout="@layout/activity_home_part1"
          android:layout_height="wrap_content"
          android:layout_width="match_parent"
          android:layout_marginBottom="30dp"/>

     <!-- 2nd Part-->
      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="@string/menu_content"
          android:textColor="@color/colorBlack"
          android:layout_marginStart="@dimen/global_16dp"
          android:padding="@dimen/global_4dp"/>


      <View
          android:layout_width="match_parent"
          android:layout_height="@dimen/global_2dp"
          android:background="@color/colorAsh"
          android:layout_marginStart="@dimen/global_16dp"
          android:layout_marginEnd="@dimen/global_16dp"
          android:layout_marginBottom="@dimen/global_8dp"/>


      <include
          layout="@layout/activity_home_part2"
          android:layout_height="wrap_content"
          android:layout_width="match_parent"
          android:layout_marginBottom="30dp"/>


      <!-- 3rd Part-->
      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="@string/communication"
          android:textColor="@color/colorBlack"
          android:layout_marginStart="@dimen/global_16dp"
          android:padding="@dimen/global_4dp"/>


      <View
          android:layout_width="match_parent"
          android:layout_height="@dimen/global_2dp"
          android:background="@color/colorAsh"
          android:layout_marginStart="@dimen/global_16dp"
          android:layout_marginEnd="@dimen/global_16dp"
          android:layout_marginBottom="@dimen/global_8dp"/>

      <include
          layout="@layout/activity_home_part3"
          android:layout_height="wrap_content"
          android:layout_width="match_parent"
          android:layout_marginBottom="30dp"/>



      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/copyright"
          android:padding="@dimen/global_4dp"
          android:layout_gravity="right"/>

   </LinearLayout>

</ScrollView>